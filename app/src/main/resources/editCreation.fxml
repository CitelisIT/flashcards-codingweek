<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="420.0" prefWidth="661.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="flashcards.controller.EditCreationController">
   <bottom>
      <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="36.0" prefWidth="661.0" BorderPane.alignment="CENTER">
         <buttons>
            <Button fx:id="ValidationButton" layoutX="553.0" layoutY="10.0" mnemonicParsing="false" onAction="#validate" text="Valider" />
            <Button mnemonicParsing="false" onAction="#switchToHomeCreation" text="Retour Liste" />
         </buttons>
      </ButtonBar>
   </bottom>
   <top>
      <VBox prefHeight="55.0" prefWidth="640.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Nom Pile" />
                  <TextField fx:id="name" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="305.0" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Description" />
                  <TextField fx:id="description" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefHeight="25.0" prefWidth="305.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <HBox alignment="CENTER" prefHeight="382.0" prefWidth="640.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="341.0" prefWidth="227.0">
               <children>
                  <Label text="question" />
                  <VBox fx:id="VboxQuestion" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <TextField />
                              <Button fx:id="delContentQuestionButton" mnemonicParsing="false" onAction="#delQuestionContent" text="-" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" prefHeight="36.0" prefWidth="227.0">
                     <children>
                        <Button fx:id="questionAddTextButton" alignment="CENTER" mnemonicParsing="false" onAction="#addQuestionText" text="+ Text" />
                        <Button fx:id="questionAddMediaButton" mnemonicParsing="false" onAction="#addQuestionMedia" text="+ Media" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" prefHeight="341.0" prefWidth="227.0">
               <children>
                  <Label text="rÃ©ponse" />
                  <VBox fx:id="VboxAnswer" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <TextField />
                              <Button fx:id="delContentAnswerButton" mnemonicParsing="false" onAction="#delAnswerContent" text="-" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" prefHeight="36.0" prefWidth="227.0">
                     <children>
                        <Button fx:id="answerAddTextButton" alignment="CENTER" mnemonicParsing="false" onAction="#addAnswerText" text="+ Text" />
                        <Button fx:id="answerAddMediaButton" mnemonicParsing="false" onAction="#addAnswerMedia" text="+ Media" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
   <left>
      <ScrollPane hbarPolicy="NEVER" prefHeight="329.0" prefWidth="233.0" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="listCard">
               <ButtonBar buttonMinWidth="20.0">
                  <buttons>
                     <Button fx:id="addCardButton" mnemonicParsing="false" onAction="#addCard" text="+" />
                     <Button fx:id="delCardButton" mnemonicParsing="false" onAction="#delCard" text="-" />
                  </buttons>
               </ButtonBar>
            </VBox>
         </content>
      </ScrollPane>
   </left>
</BorderPane>
